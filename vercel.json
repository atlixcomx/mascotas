{
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192",
      "NEXT_EXPERIMENTAL_PARTIAL_PRERENDERING": "false",
      "NEXT_PRIVATE_STANDALONE": "true",
      "NEXT_PRIVATE_MINIMAL_MODE": "1",
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_BUILD_STATIC_GENERATION": "1",
      "DATABASE_URL": "postgresql://dummy:dummy@localhost:5432/dummy",
      "NEXTAUTH_URL": "http://localhost:3000",
      "ADMIN_EMAIL": "admin@example.com",
      "ADMIN_PASSWORD": "dummy_password",
      "RESEND_API_KEY": "dummy_resend_key",
      "EMAIL_FROM": "noreply@example.com",
      "SKIP_ENV_VALIDATION": "1"
    }
  },
  "buildCommand": "npm run build",
  "github": {
    "silent": false
  },
  "crons": [
    {
      "path": "/api/cron/recordatorios",
      "schedule": "0 9 * * *"
    }
  ],
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 30
    },
    "src/app/api/admin/metrics/sse/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/notifications/sse/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/uploadthing/route.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ]
}